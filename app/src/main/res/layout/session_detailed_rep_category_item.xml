<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#555555"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/session_detailed_rep_category_item_textView_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Torso Alignment"
                android:textColor="@color/customTextColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/session_detailed_rep_category_item_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/session_detailed_rep_category_item_textView_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="9.54"
                android:textColor="@color/customTextColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/session_detailed_rep_category_item_textView_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/session_detailed_rep_category_item_textView_category" />

            <TextView
                android:id="@+id/session_detailed_rep_category_item_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="Tip: Try to place your feet shoulder-width apart."
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/session_detailed_rep_category_item_textView_score"
                app:layout_constraintStart_toStartOf="@+id/session_detailed_rep_category_item_textView_category"
                app:layout_constraintTop_toBottomOf="@+id/session_detailed_rep_category_item_divider" />

            <View
                android:id="@+id/session_detailed_rep_category_item_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="-4dp"
                android:background="@android:color/secondary_text_dark"
                app:layout_constraintBottom_toTopOf="@+id/session_detailed_rep_category_item_tip"
                app:layout_constraintEnd_toEndOf="@+id/session_detailed_rep_category_item_textView_score"
                app:layout_constraintStart_toStartOf="@+id/session_detailed_rep_category_item_textView_category"
                app:layout_constraintTop_toBottomOf="@+id/session_detailed_rep_category_item_textView_category" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>