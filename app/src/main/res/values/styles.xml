<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
    </style>

    <style name="MyTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/semi_transparent</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CustomBottomSheetDialogThemeLight" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleLight</item>
    </style>

    <style name="CustomBottomSheetDialogThemeDark" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleDark</item>
    </style>

    <style name="AppModalStyleLight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AppModalStyleDark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">#2F2F2F</item>
    </style>

    <style name="CustomMaterialCardViewLeft" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_materialCardView_customCorners_left
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_materialCardView_customCorners_left" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="CustomMaterialCardViewRight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_materialCardView_customCorners_right
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_materialCardView_customCorners_right" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyTextAppearance.MaterialComponents.Body
        </item>
        <item name="alertDialogTheme">@color/customTextColor</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/customTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/semi_transparent</item>
        <item name="colorAccent">@color/semi_transparent</item>
        <item name="colorPrimary">@color/cardViewBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/cardViewBackground</item>
    </style>

    <style name="CustomToolbarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/customTextColor</item>
    </style>

</resources>