<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MT_Project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/semi_transparent</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogThemeLight</item>
    </style>

    <color name="cardViewBackground">@color/custom_cardview_background_light</color>
    <color name="customDialogBackground">@color/custom_dialog_background_light</color>
    <color name="customTextColor">#555555</color>
</resources>